#pragma once
#include "std_msgs.idl"
module sensor_msgs
{
    // ##########################################################################
    // # A single feedback command for a joystick or gamepad device.

            const octet TYPE_LED        = 0;  // # Control an LED on the device.
        const octet TYPE_RUMBLE     = 1;  // # Enable rumble/vibration motors.
        const octet TYPE_BUZZER     = 2;  // # Audible buzzer.
        
    struct JoyFeedback
    {


        octet type;   // # The type of feedback to send (see TYPE_* constants above).
        octet id;     // # The numeric identifier of the actuator/LED/buzzer to control.
        float intensity;  // # The intensity level: 0.0 (off) to 1.0 (full intensity).
    };
};